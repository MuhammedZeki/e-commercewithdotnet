@section Bar {
    @await Component.InvokeAsync("Navbar")
}

<section class="py-3 shadow-sm"
         style="background: linear-gradient(90deg, #1a1a2e 0%, #16213e 100%); border-bottom: 1px solid rgba(255, 255, 255, 0.05);">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/" class="text-decoration-none d-inline-flex align-items-center breadcrumb-link">
                        <i class="fa-solid fa-house me-2"></i>Anasayfa
                    </a>
                </li>
                <li class="breadcrumb-item active d-inline-flex align-items-center" aria-current="page">
                    Erişim Engellendi
                </li>
            </ol>
        </nav>
    </div>
</section>

<section class="mt-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card border-0 shadow-lg p-5" style="border-radius: 30px; background: #fff;">
                    <div class="mb-4">
                        <div class="bg-danger d-inline-block p-4 rounded-circle shadow-sm bg-opacity-10">
                            <i class="fa-solid fa-hand text-danger" style="font-size: 4rem;"></i>
                        </div>
                    </div>

                    <h2 class="fw-bold text-dark mb-3">Erişim Yetkiniz Yok</h2>
                    <p class="text-muted mb-4">Bu sayfayı görüntülemek için gerekli izinlere sahip değilsiniz. Lütfen
                        giriş yaptığınızdan veya doğru hesapla bağlı olduğunuzdan emin olun.</p>

                        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                            <a href="/" class="btn btn-outline-secondary px-4 py-2 rounded-pill">
                                <i class="fa-solid fa-arrow-left me-2"></i>Anasayfa
                            </a>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary px-4 py-2 rounded-pill"
                                   style="background: #1a1a2e; border: none;">
                                <i class="fa-solid fa-right-to-bracket me-2"></i>Giriş Yap
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        .breadcrumb-link {
            color: rgba(255, 255, 255, 0.6) !important;
            transition: 0.3s;
            font-size: 0.9rem;
        }

        .breadcrumb-link:hover {
            color: #fff !important;
        }

        .breadcrumb-item.active {
            color: #fbc531 !important;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .breadcrumb-item+.breadcrumb-item::before {
            color: rgba(255, 255, 255, 0.3) !important;
            content: "\f105";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
        }
    </style>