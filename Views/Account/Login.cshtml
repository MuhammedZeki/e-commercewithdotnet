@model AccountLoginModel

@section Bar {
    <section class="py-3 shadow-sm"
             style="background: linear-gradient(90deg, #1a1a2e 0%, #16213e 100%); border-bottom: 1px solid rgba(255, 255, 255, 0.05);">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a href="/" class="text-decoration-none d-inline-flex align-items-center breadcrumb-link">
                            <i class="fa-solid fa-house me-2"></i>Anasayfa
                        </a>
                    </li>
                    <li class="breadcrumb-item active d-inline-flex align-items-center" aria-current="page">
                        Hesap Girişi
                    </li>
                </ol>
            </nav>
        </div>
    </section>
}

<section class="my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card border-0 shadow-lg p-3"
                     style="border-radius: 25px; background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px);">
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <div class="bg-primary d-inline-block p-3 rounded-circle mb-3 shadow"
                                 style="background: #1a1a2e !important;">
                                <i class="fa-solid fa-user-lock text-warning fs-3"></i>
                            </div>
                            <h3 class="fw-bold text-dark">Tekrar Hoş Geldiniz</h3>
                            <p class="text-muted small">Hesabınıza erişmek için bilgilerinizi girin</p>
                        </div>

                        <form method="post" asp-controller="Account" asp-action="Login" novalidate>
                            <div asp-validation-summary="All" class="alert alert-danger border-0 small py-2"
                                 style="border-radius: 12px;"></div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label small fw-bold ms-1 text-muted"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"
                                          style="border-radius: 12px 0 0 12px;"><i
                                        class="fa fa-envelope opacity-50"></i></span>
                                        <input asp-for="Email" class="form-control bg-light border-0 py-2"
                                               style="border-radius: 0 12px 12px 0;" placeholder="E-posta adresiniz">
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Password" class="form-label small fw-bold ms-1 text-muted"></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-0"
                                                  style="border-radius: 12px 0 0 12px;"><i
                                                class="fa fa-key opacity-50"></i></span>
                                                <input asp-for="Password" type="password"
                                                       class="form-control bg-light border-0 py-2"
                                                       style="border-radius: 0 12px 12px 0;" placeholder="Parolanız">
                                                </div>
                                                <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                                            </div>

                                            <div class="d-flex justify-content-between align-items-center mb-4 ms-1">
                                                <div class="form-check">
                                                    <input asp-for="RememberMe" class="form-check-input" style="cursor: pointer;">
                                                        <label asp-for="RememberMe" class="form-check-label small text-muted"
                                                               style="cursor: pointer;">Beni Hatırla</label>
                                                    </div>
                                                    <a asp-action="ForgotPassword" asp-controller="Account"
                                                       class="text-decoration-none small fw-bold text-primary">Şifremi Unuttum</a>
                                                </div>

                                                <button class="btn btn-primary w-100 py-2 mb-3 shadow" type="submit"
                                                        style="border-radius: 12px; background: #1a1a2e; border: none;">
                                                    <i class="fa-solid fa-right-to-bracket me-2"></i> Giriş Yap
                                                </button>

                                                <div class="text-center mt-3">
                                                    <p class="small text-muted">Henüz hesabınız yok mu? <a asp-action="Create"
                                                                                                           asp-controller="Account" class="fw-bold text-warning text-decoration-none">Hemen
                                                        Üye Ol</a></p>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>

                        @section Script {
                            @await Html.PartialAsync("_ValidationScriptsPartial")
                        }

                        <style>
                            .breadcrumb-link {
                                color: rgba(255, 255, 255, 0.6) !important;
                                transition: 0.3s;
                                font-size: 0.9rem;
                            }

                            .breadcrumb-link:hover {
                                color: #fff !important;
                            }

                            .breadcrumb-item.active {
                                color: #fbc531 !important;
                                font-weight: 600;
                                font-size: 0.9rem;
                            }

                            .breadcrumb-item+.breadcrumb-item::before {
                                color: rgba(255, 255, 255, 0.3) !important;
                                content: "\f105";
                                font-family: "Font Awesome 6 Free";
                                font-weight: 900;
                            }

                            .form-control:focus {
                                background-color: #fff !important;
                                box-shadow: 0 0 0 0.25rem rgba(26, 26, 46, 0.1);
                                border: 1px solid #1a1a2e !important;
                            }

                            .form-check-input:checked {
                                background-color: #1a1a2e;
                                border-color: #1a1a2e;
                            }
                        </style>