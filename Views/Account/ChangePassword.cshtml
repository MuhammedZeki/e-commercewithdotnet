@section Bar {
    @await Component.InvokeAsync("Navbar")
}
@model AccountChangePasswordModel

<section class="py-3 shadow-sm"
         style="background: linear-gradient(90deg, #1a1a2e 0%, #16213e 100%); border-bottom: 1px solid rgba(255, 255, 255, 0.05);">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/" class="text-decoration-none d-inline-flex align-items-center breadcrumb-link">
                        <i class="fa-solid fa-house me-2"></i>Anasayfa
                    </a>
                </li>
                <li class="breadcrumb-item active d-inline-flex align-items-center" aria-current="page">
                    Parola Değiştir
                </li>
            </ol>
        </nav>
    </div>
</section>

<section class="mt-4 mb-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm p-2" style="border-radius: 20px; background: #f8f9fa;">
                    @await Html.PartialAsync("Partials/Site/_AccountSideBar")
                </div>
            </div>

            <div class="col-md-9">
                <div class="card border-0 shadow-sm p-4" style="border-radius: 25px; background: #fff;">
                    <div class="d-flex align-items-center mb-4">
                        <div style="width: 5px; height: 25px; background: #fbc531; border-radius: 10px;" class="me-3">
                        </div>
                        <h4 class="fw-bold mb-0 text-dark">Güvenlik Ayarları</h4>
                    </div>

                    <form method="post" asp-controller="Account" asp-action="ChangePassword" novalidate>
                        <div asp-validation-summary="All" class="alert alert-danger border-0 shadow-sm mb-4 py-2 small"
                             style="border-radius: 12px;"></div>

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="OldPassword" class="form-label small fw-bold text-muted ms-1"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"
                                          style="border-radius: 12px 0 0 12px;"><i
                                        class="fa-solid fa-lock-open opacity-50"></i></span>
                                        <input asp-for="OldPassword" type="password"
                                               class="form-control bg-light border-0 py-2"
                                               style="border-radius: 0 12px 12px 0;" placeholder="Mevcut şifreniz">
                                        </div>
                                        <span asp-validation-for="OldPassword" class="text-danger small mt-1 d-block"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Password" class="form-label small fw-bold text-muted ms-1"></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-0"
                                                  style="border-radius: 12px 0 0 12px;"><i
                                                class="fa-solid fa-key opacity-50"></i></span>
                                                <input asp-for="Password" type="password"
                                                       class="form-control bg-light border-0 py-2"
                                                       style="border-radius: 0 12px 12px 0;" placeholder="Yeni şifreniz">
                                                </div>
                                                <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                                            </div>

                                            <div class="col-md-6">
                                                <label asp-for="ConfirmPassword"
                                                       class="form-label small fw-bold text-muted ms-1"></label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-light border-0"
                                                          style="border-radius: 12px 0 0 12px;"><i
                                                        class="fa-solid fa-check-double opacity-50"></i></span>
                                                        <input asp-for="ConfirmPassword" type="password"
                                                               class="form-control bg-light border-0 py-2"
                                                               style="border-radius: 0 12px 12px 0;" placeholder="Şifre tekrarı">
                                                        </div>
                                                        <span asp-validation-for="ConfirmPassword"
                                                              class="text-danger small mt-1 d-block"></span>
                                                    </div>
                                                </div>

                                                <div class="mt-4 border-top pt-4 text-end">
                                                    <button class="btn btn-primary px-5 py-2 shadow" type="submit"
                                                            style="border-radius: 12px; background: #1a1a2e; border: none;">
                                                        <i class="fa-solid fa-shield-halved me-2 text-warning"></i>Şifreyi Güncelle
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>

                        @section Script {
                            @await Html.PartialAsync("_ValidationScriptsPartial")
                        }

                        <style>
                            .breadcrumb-link {
                                color: rgba(255, 255, 255, 0.6) !important;
                                transition: 0.3s;
                                font-size: 0.9rem;
                            }

                            .breadcrumb-link:hover {
                                color: #fff !important;
                            }

                            .breadcrumb-item.active {
                                color: #fbc531 !important;
                                font-weight: 600;
                                font-size: 0.9rem;
                            }

                            .breadcrumb-item+.breadcrumb-item::before {
                                color: rgba(255, 255, 255, 0.3) !important;
                                content: "\f105";
                                font-family: "Font Awesome 6 Free";
                                font-weight: 900;
                            }

                            .form-control:focus {
                                background-color: #fff !important;
                                box-shadow: 0 0 0 0.25rem rgba(26, 26, 46, 0.1);
                                border: 1px solid #1a1a2e !important;
                            }
                        </style>