@section Bar {
    @await Component.InvokeAsync("Navbar")
}
@model AccountEditUserModel

<section class="py-3 shadow-sm"
         style="background: linear-gradient(90deg, #1a1a2e 0%, #16213e 100%); border-bottom: 1px solid rgba(255, 255, 255, 0.05);">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/" class="text-decoration-none d-inline-flex align-items-center breadcrumb-link">
                        <i class="fa-solid fa-house me-2"></i>Anasayfa
                    </a>
                </li>
                <li class="breadcrumb-item active d-inline-flex align-items-center" aria-current="page">
                    Kullanıcı Ayarları
                </li>
            </ol>
        </nav>
    </div>
</section>

<section class="mt-4 mb-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm p-2" style="border-radius: 20px; background: #f8f9fa;">
                    @await Html.PartialAsync("Partials/Site/_AccountSideBar")
                </div>
            </div>

            <div class="col-md-9">
                <div class="card border-0 shadow-sm p-4" style="border-radius: 25px; background: #fff;">
                    <div class="d-flex align-items-center mb-4">
                        <div style="width: 5px; height: 25px; background: #1a1a2e; border-radius: 10px;" class="me-3">
                        </div>
                        <h4 class="fw-bold mb-0">Profil Bilgilerini Güncelle</h4>
                    </div>

                    <form method="post" asp-controller="Account" asp-action="UserEdit" novalidate>
                        <div asp-validation-summary="All" class="alert alert-danger border-0 shadow-sm mb-4"
                             style="border-radius: 15px; font-size: 0.9rem;"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label small fw-bold text-muted ms-1"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"
                                          style="border-radius: 12px 0 0 12px;"><i
                                        class="fa fa-user opacity-50"></i></span>
                                        <input asp-for="FullName" class="form-control bg-light border-0 py-2"
                                               style="border-radius: 0 12px 12px 0;" placeholder="Adınız Soyadınız">
                                        </div>
                                        <span asp-validation-for="FullName" class="text-danger small mt-1 d-block"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Email" class="form-label small fw-bold text-muted ms-1"></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-0"
                                                  style="border-radius: 12px 0 0 12px;"><i
                                                class="fa fa-envelope opacity-50"></i></span>
                                                <input asp-for="Email" class="form-control bg-light border-0 py-2"
                                                       style="border-radius: 0 12px 12px 0;" placeholder="E-posta adresiniz">
                                                </div>
                                                <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                                            </div>
                                        </div>

                                        <div class="mt-4 border-top pt-4 text-end">
                                            <button class="btn btn-primary px-5 py-2 shadow" type="submit"
                                                    style="border-radius: 12px; background: #1a1a2e; border: none;">
                                                <i class="fa-solid fa-floppy-disk me-2"></i>Değişiklikleri Kaydet
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                @section Script {
                    @await Html.PartialAsync("_ValidationScriptsPartial")
                }

                <style>
                    .breadcrumb-link {
                        color: rgba(255, 255, 255, 0.6) !important;
                        transition: 0.3s;
                        font-size: 0.9rem;
                    }

                    .breadcrumb-link:hover {
                        color: #fff !important;
                    }

                    .breadcrumb-item.active {
                        color: #fbc531 !important;
                        font-weight: 600;
                        font-size: 0.9rem;
                    }

                    .breadcrumb-item+.breadcrumb-item::before {
                        color: rgba(255, 255, 255, 0.3) !important;
                        content: "\f105";
                        font-family: "Font Awesome 6 Free";
                        font-weight: 900;
                    }

                    .form-control:focus {
                        background-color: #fff !important;
                        box-shadow: 0 0 0 0.25rem rgba(26, 26, 46, 0.1);
                        border: 1px solid #1a1a2e !important;
                    }
                </style>