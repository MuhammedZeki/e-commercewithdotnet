@model Product

<div class="card h-100 border-0 shadow-sm modern-product-card"
     style="border-radius: 20px; overflow: hidden; transition: all 0.3s ease;">
    <div class="position-relative img-wrap overflow-hidden" style="height: 220px; background: #f8f9fa;">
        <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id">
            <img src="~/img/@Model.Img" alt="@Model.Name" class="card-img-top h-100 w-100"
                 style="object-fit: contain; transition: transform 0.5s ease;">
            </a>

            <div class="action-buttons position-absolute d-flex flex-column gap-2"
                 style="right: -50px; top: 15px; transition: all 0.3s ease; z-index: 3;">
                <button class="btn btn-white shadow-sm rounded-circle d-flex align-items-center justify-content-center"
                        style="width: 40px; height: 40px; background: white;">
                    <i class="fa-regular fa-heart text-danger"></i>
                </button>
                <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id"
                       class="btn btn-white shadow-sm rounded-circle d-flex align-items-center justify-content-center"
                       style="width: 40px; height: 40px; background: white;">
                    <i class="fa-solid fa-eye text-primary"></i>
                </a>
            </div>
        </div>

        <div class="card-body p-3 d-flex flex-column">
            <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id" class="text-decoration-none mb-2">
                <h6 class="title text-truncate fw-bold mb-0" style="color: #2d3436; font-size: 1rem;">@Model.Name</h6>
            </a>

            <div class="mt-auto d-flex align-items-center justify-content-between">
                <div class="price-wrap">
                    <span class="h5 fw-bolder mb-0" style="color: #1a1a2e;">@Model.Price.ToString("C2")</span>
                </div>

                <form asp-controller="Cart" asp-action="AddToCart" method="POST" class="ms-2">
                    <input type="hidden" name="productId" value="@Model.Id">
                    <button type="submit"
                            class="btn btn-primary rounded-pill d-flex align-items-center justify-content-center p-0"
                            style="width: 38px; height: 38px; background: #1a1a2e; border: none;">
                        <i class="fa-solid fa-plus"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <style>
        .modern-product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1) !important;
        }

        .modern-product-card:hover .img-wrap img {
            transform: scale(1.1);
        }

        .modern-product-card:hover .action-buttons {
            right: 15px !important;
        }

        .btn-white:hover {
            background: #fbc531 !important;
            color: white !important;
            border-color: #fbc531 !important;
        }
    </style>