@model List<Product>

@section Bar {
    @await Component.InvokeAsync("Navbar")
}

<section class="py-3 shadow-sm" style="background: linear-gradient(90deg, #1a1a2e 0%, #16213e 100%); border-bottom: 1px solid rgba(255, 255, 255, 0.05);">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/" class="text-decoration-none d-inline-flex align-items-center breadcrumb-link">
                        <i class="fa-solid fa-house me-2"></i>Anasayfa
                    </a>
                </li>
                <li class="breadcrumb-item active d-inline-flex align-items-center" aria-current="page">
                    Ürün Listesi
                </li>
            </ol>
        </nav>
    </div>
</section>

<section class="mt-4 mb-5">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <div class="d-flex align-items-center">
                <div style="width: 5px; height: 25px; background: #fbc531; border-radius: 10px;" class="me-3"></div>
                <h3 class="h4 fw-bold mb-0 text-dark">Tüm Ürünler</h3>
                <span class="badge bg-light text-muted border ms-3 rounded-pill">@Model.Count() Ürün Bulundu</span>
            </div>
            
            <div class="d-none d-md-block">
                <select class="form-select form-select-sm border-0 shadow-sm rounded-pill px-3" style="background-color: #f8f9fa;">
                    <option selected>Sıralama: Varsayılan</option>
                    <option>Fiyat: Düşükten Yükseğe</option>
                    <option>Fiyat: Yüksekten Düşüğe</option>
                    <option>En Yeniler</option>
                </select>
            </div>
        </div>

        @if (Model.Count == 0)
        {
            <div class="text-center py-5 shadow-sm bg-white" style="border-radius: 20px;">
                <div class="mb-3">
                    <i class="fa-solid fa-magnifying-glass text-muted opacity-25" style="font-size: 4rem;"></i>
                </div>
                <h5 class="text-secondary">Aradığınız kriterlerde ürün bulunamadı.</h5>
                <p class="text-muted small">Lütfen filtrelerinizi kontrol edin veya ana sayfaya dönün.</p>
                <a href="/" class="btn btn-primary rounded-pill px-4" style="background: #1a1a2e; border: none;">Alışverişe Başla</a>
            </div>
        }
        else
        {
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
                @foreach (var product in Model)
                {
                    <div class="col">
                        @await Html.PartialAsync("Partials/Site/_ProductCard", product)
                    </div>
                }
            </div>
        }
    </div>
</section>

<style>
    .breadcrumb-link { color: rgba(255, 255, 255, 0.6) !important; transition: 0.3s; font-size: 0.9rem; }
    .breadcrumb-link:hover { color: #fff !important; }
    .breadcrumb-item.active { color: #fbc531 !important; font-weight: 600; font-size: 0.9rem; }
    .breadcrumb-item + .breadcrumb-item::before { color: rgba(255, 255, 255, 0.3) !important; content: "\f105"; font-family: "Font Awesome 6 Free"; font-weight: 900; }
    
    /* Ürün kartları arası geçiş yumuşatması */
    .row > .col {
        transition: transform 0.3s ease;
    }
</style>