@model Product
@section Bar {
    @await Component.InvokeAsync("Navbar")
}

<section class="mt-4 mb-5">
    <div class="container">
        <div class="card border-0 shadow-lg p-4"
             style="border-radius: 30px; background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px);">
            <div class="row g-5">
                <div class="col-lg-5">
                    <div class="gallery-wrap">
                        <div class="img-big-wrap shadow-sm mb-3 overflow-hidden"
                             style="border-radius: 20px; border: 1px solid #f0f0f0;">
                            <a href="~/img/@Model.Img" data-type="image" data-fslightbox="product-gallery">
                                <img src="~/img/@Model.Img" alt="@Model.Name" class="img-fluid w-100 main-img"
                                     style="transition: transform 0.5s ease;">
                                </a>
                            </div>
                            <div class="thumbs-wrap d-flex gap-2 overflow-auto pb-2">
                                <a href="~/img/@Model.Img" data-type="image" data-fslightbox="product-gallery"
                                       class="item-thumb shadow-sm">
                                    <img src="~/img/@Model.Img" width="70" height="70"
                                         style="object-fit: cover; border-radius: 10px;">
                                    </a>
                                    @for (int i = 1; i <= 3; i++)
                                    {
                                        <a href="~/img/@(i).jpeg" data-type="image" data-fslightbox="product-gallery"
                                               class="item-thumb shadow-sm">
                                            <img src="~/img/@(i).jpeg" width="70" height="70"
                                                 style="object-fit: cover; border-radius: 10px;">
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-7">
                                <article class="ps-lg-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <h2 class="title text-dark fw-bold mb-2" style="letter-spacing: -0.5px;">@Model.Name</h2>
                                        <span
                                            class="badge @(Model.IsActive ? "bg-light text-success" : "bg-light text-danger") p-2 rounded-pill">
                                            <i class="fa-solid fa-circle me-1" style="font-size: 8px;"></i>
                                            @(Model.IsActive ? "Stokta Var" : "Tükendi")
                                        </span>
                                    </div>

                                    <div class="rating-wrap mb-3">
                                        <div class="stars text-warning me-2 d-inline-block">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa-regular fa-star"></i>
                                        </div>
                                        <span class="text-muted small">(42 Değerlendirme)</span>
                                    </div>

                                    <div class="mb-4 d-flex align-items-center">
                                        <span class="price h2 fw-bolder text-primary mb-0">@Model.Price.ToString("C2")</span>
                                        <span class="ms-3 text-muted text-decoration-line-through">@((Model.Price *
                                                                            1.2).ToString("C2"))</span>
                                        </div>

                                        <div class="product-description mb-4 p-3 rounded-4"
                                             style="background: #f8f9fa; border-left: 5px solid #1a1a2e;">
                                            <p class="mb-0 text-secondary">@Model.Description</p>
                                        </div>

                                        <div class="specs mb-4">
                                            <div class="row g-2">
                                                <div class="col-sm-6">
                                                    <div class="p-2 border rounded-3 bg-white">
                                                        <small class="text-muted d-block">Renk</small>
                                                        <span class="fw-bold">Yıldız Işığı</span>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="p-2 border rounded-3 bg-white">
                                                        <small class="text-muted d-block">Bağlantı</small>
                                                        <span class="fw-bold">GPS + Bluetooth</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row mb-4 align-items-end">
                                            <div class="col-md-5">
                                                <label class="form-label small fw-bold text-muted">Kasa Boyutu</label>
                                                <select class="form-select border-0 shadow-sm py-2"
                                                        style="border-radius: 12px; background-color: #f1f1f1;">
                                                    <option>41 mm</option>
                                                    <option>45 mm</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="d-flex gap-3 mt-4 action-buttons">
                                            <form method="post" asp-action="AddToCart" asp-controller="Cart" class="flex-grow-1">
                                                <input type="hidden" name="productId" value="@Model.Id" />
                                                <button type="submit" class="btn btn-warning w-100 py-3 fw-bold shadow-sm"
                                                        style="border-radius: 15px; background: #fbc531;">
                                                    <i class="fa fa-shopping-basket me-2"></i> SEPETE EKLE
                                                </button>
                                            </form>
                                            <button class="btn btn-light px-4 py-3 shadow-sm"
                                                    style="border-radius: 15px; background: white;">
                                                <i class="fa-regular fa-heart text-danger fs-5"></i>
                                            </button>
                                        </div>
                                    </article>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <div class="container mb-5">
                    <div class="d-flex align-items-center mb-4">
                        <h4 class="fw-bold mb-0">Benzer Ürünler</h4>
                        <hr class="flex-grow-1 ms-3 opacity-10">
                    </div>
                    @await Html.PartialAsync("Partials/Site/_SameProducts", ViewData["sameProducts"])
                </div>

                <style>
                    .main-img:hover {
                        transform: scale(1.05);
                    }

                    .item-thumb {
                        border: 2px solid transparent;
                        transition: 0.3s;
                        border-radius: 12px;
                    }

                    .item-thumb:hover {
                        border-color: #fbc531;
                    }

                    .action-buttons .btn:active {
                        transform: scale(0.98);
                    }

                    .price {
                        color: #1a1a2e !important;
                    }
                </style>