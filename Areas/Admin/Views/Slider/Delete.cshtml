@model Slider
@{
    Layout = "_AdminLayout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card border-0 shadow-lg text-center" style="border-radius: 25px; overflow: hidden;">
            <div style="height: 10px; background: linear-gradient(90deg, #eb4d4b 0%, #ff7979 100%);"></div>

            <div class="card-body p-5">
                <div class="mb-4">
                    <div class="position-relative d-inline-block mb-4">
                        <div class="bg-light rounded-3 p-2 border" style="width: 150px;">
                            <img src="~/img/@Model.Image" class="img-fluid rounded-2 shadow-sm" alt="@Model.Title">
                            </div>
                            <span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger shadow">
                                <i class="fa-solid fa-trash-can p-1"></i>
                            </span>
                        </div>

                        <h3 class="fw-bold text-dark">Slider Silinsin mi?</h3>
                        <p class="text-muted px-2">
                            <strong class="text-dark">"@Model.Title"</strong> başlıklı slider görseli ve tüm bilgileri
                            kalıcı olarak silinecektir.
                        </p>
                    </div>

                    <form asp-controller="Slider" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                        <input type="hidden" name="Id" value="@Model.Id">

                        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                            <a asp-controller="Slider" asp-action="Index"
                                   class="btn btn-light px-4 py-2 rounded-pill fw-bold border text-muted transition-all">
                                <i class="fa-solid fa-xmark me-2"></i> Vazgeç
                            </a>
                            <button type="submit"
                                    class="btn btn-danger px-4 py-2 rounded-pill fw-bold shadow-sm transition-all">
                                <i class="fa-solid fa-check me-2 text-warning"></i> Evet, Sil
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-light border-0 py-3 text-center">
                    <small class="text-muted italic">
                        <i class="fa-solid fa-circle-exclamation me-1"></i> Bu işlem geri alınamaz.
                    </small>
                </div>
            </div>
        </div>
    </div>

    <style>
        .transition-all {
            transition: all 0.3s ease;
        }

        .transition-all:hover {
            transform: translateY(-3px);
            filter: brightness(1.1);
        }

        .card {
            animation: zoomIn 0.3s ease-out;
        }

        @@keyframes zoomIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }
    </style>