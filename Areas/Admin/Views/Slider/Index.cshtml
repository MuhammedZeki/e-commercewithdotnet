@model List<SliderGetModel>
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col">
        <div class="card border-0 shadow-sm" style="border-radius: 20px; overflow: hidden;">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div style="width: 5px; height: 25px; background: #f0932b; border-radius: 10px;" class="me-3"></div>
                    <h5 class="card-title fw-bold mb-0 text-dark">Slider Yönetimi</h5>
                </div>
                <a asp-controller="Slider" asp-action="Create" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm" style="background: #1a1a2e; border: none;">
                    <i class="fa-solid fa-plus me-1 text-warning"></i> Yeni Slider Ekle
                </a>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead style="background: #f8f9fa;">
                            <tr>
                                <th class="ps-4 border-0 text-uppercase small fw-bolder text-muted" style="font-size: 0.75rem; width: 80px;">Sıra</th>
                                <th class="border-0 text-uppercase small fw-bolder text-muted" style="font-size: 0.75rem; width: 180px;">Önizleme</th>
                                <th class="border-0 text-uppercase small fw-bolder text-muted" style="font-size: 0.75rem;">Slider Başlığı</th>
                                <th class="border-0 text-uppercase small fw-bolder text-muted text-center" style="font-size: 0.75rem;">Durum</th>
                                <th class="border-0 text-end pe-4" style="width: 150px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model.OrderBy(x => x.Index))
                            {
                                <tr>
                                    <td class="ps-4">
                                        <span class="badge rounded-pill bg-light text-dark border">#@i.Index</span>
                                    </td>
                                    <td>
                                        <div class="position-relative d-inline-block">
                                            <img src="~/img/@i.Image" class="rounded-3 shadow-sm border" style="width: 140px; height: 70px; object-fit: cover;" alt="@i.Title">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="fw-bold text-dark">@i.Title</div>
                                        <small class="text-muted d-block" style="font-size: 0.7rem;">ID: @i.Id</small>
                                    </td>
                                    <td class="text-center">
                                        @if (i.IsActive)
                                        {
                                            <span class="badge bg-success-subtle text-success px-3 py-2 rounded-pill border border-success border-opacity-25">
                                                <i class="fa-solid fa-eye me-1"></i> Aktif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger-subtle text-danger px-3 py-2 rounded-pill border border-danger border-opacity-25">
                                                <i class="fa-solid fa-eye-slash me-1"></i> Taslak
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm rounded-pill bg-white p-1 border">
                                            <a asp-controller="Slider" asp-action="Edit" asp-route-id="@i.Id" 
                                               class="btn btn-sm btn-white border-0 rounded-circle admin-action-btn" title="Düzenle">
                                                <i class="fa-solid fa-pen-to-square text-primary"></i>
                                            </a>
                                            <a asp-controller="Slider" asp-action="Delete" asp-route-id="@i.Id" 
                                               class="btn btn-sm btn-white border-0 rounded-circle admin-action-btn" title="Sil">
                                                <i class="fa-solid fa-trash-can text-danger"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="card-footer bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="fa-solid fa-circle-info me-1 text-primary"></i> Toplam <strong>@Model.Count</strong> adet slider mevcut.
                    </small>
                    <small class="text-muted small">
                        İpucu: Görseller 1920x800px boyutunda olmalıdır.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-action-btn {
        width: 35px;
        height: 35px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
    }
    .admin-action-btn:hover {
        background-color: #f8f9fa;
        transform: scale(1.1);
    }
    .table tbody tr {
        transition: background 0.2s;
    }
    .table tbody tr:hover {
        background-color: rgba(248, 249, 250, 0.8);
    }
    .btn-white { background: #fff; }
</style>