@model CategoryCreateModel
@{
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm" style="border-radius: 20px;">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div style="width: 5px; height: 25px; background: #10ac84; border-radius: 10px;" class="me-3"></div>
                    <h5 class="card-title fw-bold mb-0 text-dark">Yeni Kategori Ekle</h5>
                </div>
                <a asp-action="Index" class="btn btn-light btn-sm rounded-pill px-3 border shadow-sm text-muted">
                    <i class="fa-solid fa-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>

            <div class="card-body p-4">
                <form method="post" asp-controller="Category" asp-action="Create" class="needs-validation">

                    <div class="row mb-4">
                        <label asp-for="CategoryName"
                               class="col-sm-3 col-form-label fw-bold text-muted small text-uppercase"></label>
                        <div class="col-sm-9">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0" style="border-radius: 12px 0 0 12px;">
                                    <i class="fa-solid fa-tag opacity-50"></i>
                                </span>
                                <input type="text" asp-for="CategoryName" class="form-control bg-light border-0 py-2"
                                       style="border-radius: 0 12px 12px 0;" placeholder="Örn: Akıllı Telefonlar">
                                </div>
                                <span asp-validation-for="CategoryName" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <label asp-for="CategoryUrl"
                                   class="col-sm-3 col-form-label fw-bold text-muted small text-uppercase"></label>
                            <div class="col-sm-9">
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0" style="border-radius: 12px 0 0 12px;">
                                        <i class="fa-solid fa-link opacity-50"></i>
                                    </span>
                                    <input type="text" asp-for="CategoryUrl" class="form-control bg-light border-0 py-2"
                                           style="border-radius: 0 12px 12px 0;" placeholder="Örn: akilli-telefonlar">
                                    </div>
                                    <small class="text-muted d-block mt-1 ms-1" style="font-size: 0.75rem;">
                                        <i class="fa-solid fa-circle-info me-1"></i> Boş bırakırsanız sistem otomatik
                                        oluşturacaktır.
                                    </small>
                                    <span asp-validation-for="CategoryUrl" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <hr class="my-4 opacity-10">

                            <div class="row">
                                <div class="col-sm-9 offset-sm-3">
                                    <button type="submit" class="btn btn-primary px-5 py-2 shadow-sm rounded-pill"
                                            style="background: #1a1a2e; border: none;">
                                        <i class="fa-solid fa-floppy-disk me-2 text-warning"></i> Kategoriyi Kaydet
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        @section Script {
            @await Html.PartialAsync("_ValidationScriptsPartial")
        }

        <style>
            .form-control:focus {
                background-color: #fff !important;
                box-shadow: 0 0 0 0.25rem rgba(26, 26, 46, 0.05);
                border: 1px solid #1a1a2e !important;
            }

            .input-group-text {
                border: 1px solid transparent;
            }
        </style>