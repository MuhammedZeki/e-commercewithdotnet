@model Product
@{
    Layout = "_AdminLayout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card border-0 shadow-lg text-center" style="border-radius: 25px; overflow: hidden;">
            <div style="height: 10px; background: linear-gradient(90deg, #ff4757 0%, #ff6b81 100%);"></div>

            <div class="card-body p-5">
                <div class="mb-4">
                    <div class="position-relative d-inline-block mb-4">
                        <div class="bg-danger bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto"
                             style="width: 100px; height: 100px;">
                            <i class="fa-solid fa-box-archive text-danger fs-1"></i>
                        </div>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            <i class="fa-solid fa-xmark"></i>
                        </span>
                    </div>

                    <h3 class="fw-bold text-dark">Ürünü Sil?</h3>
                    <p class="text-muted px-3">
                        <strong class="text-dark">"@Model.Name"</strong> başlıklı ürün veritabanından kalıcı olarak
                        silinecektir. Bu işleme devam etmek istiyor musunuz?
                    </p>
                </div>

                <form asp-controller="Product" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" name="Id" value="@Model.Id">

                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <a asp-action="Index" asp-controller="Product"
                               class="btn btn-light px-4 py-2 rounded-pill fw-bold border text-muted transition-all">
                            <i class="fa-solid fa-rotate-left me-2"></i> Hayır, Vazgeç
                        </a>
                        <button type="submit"
                                class="btn btn-danger px-4 py-2 rounded-pill fw-bold shadow-sm transition-all">
                            <i class="fa-solid fa-trash-can me-2 text-warning"></i> Evet, Sil
                        </button>
                    </div>
                </form>
            </div>

            <div class="card-footer bg-light border-0 py-3">
                <div class="d-flex align-items-center justify-content-center text-muted small">
                    <i class="fa-solid fa-shield-halved me-2"></i>
                    <span>Ürün silindiğinde ilişkili görseller de sunucudan kaldırılabilir.</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .transition-all {
        transition: all 0.3s ease;
    }

    .transition-all:hover {
        transform: translateY(-2px);
        filter: brightness(1.1);
    }

    .card {
        animation: fadeInUp 0.5s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>