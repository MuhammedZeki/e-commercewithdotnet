@{
    Layout = "_AdminLayout";
}
@model Product
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body text-center">
                @Model.Name isimli ürünü silmek istiyor musunuz?
                <form asp-controller="Product" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" name="Id" value="@Model.Id">
                    <button type="submit" class="btn btn-danger">Evet</button>
                    <a asp-action="Index" asp-controller="Product" type="button" class="btn btn-primary">Hayır</a>
                </form>
            </div>
        </div>
    </div>
</div>