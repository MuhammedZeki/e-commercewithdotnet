@{
    Layout = "_AdminLayout";
}
@model ProductEditModel

<form method="post" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header py-1 d-flex justify-content-between align-items-center">
                    <h5 class="card-title">Ürün Güncelleme</h5>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-list"></i>
                    </a>
                </div>
                <div class="card-body">
                    <input type="hidden" name="Id" value="@Model.Id">
                    <div class="row mb-3">
                        <label for="Name" class="col-sm-2 col-form-label">Ürün Adı</label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="Description" class="col-sm-2 col-form-label">Ürün Açıklama</label>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="Price" class="col-sm-2 col-form-label">Fiyat</label>
                        <div class="col-sm-10">
                            <input asp-for="Price" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="IsActive" class="col-sm-2 col-form-label">Aktif</label>
                        <div class="col-sm-10">
                            <input asp-for="IsActive" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="IsHome" class="col-sm-2 col-form-label">Anasayfa</label>
                        <div class="col-sm-10">
                            <input asp-for="IsHome" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="CategoryId" class="col-sm-2 col-form-label">Kategori</label>
                        <div class="col-sm-10">
                            <select class="form-select" asp-for="CategoryId" asp-items="ViewBag.Categories">
                                <option value="" selected>Seçiniz</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <img src="~/img/@Model.Img" class="img-thumbnail" alt="@Model.Img">
                    <input asp-for="@Model.ImgFile" type="file" class="form-control mt-3">
                </div>
            </div>
        </div>
    </div>
</form>