@model ProductCreateModel
@{
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card border-0 shadow-sm" style="border-radius: 20px;">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div style="width: 5px; height: 25px; background: #10ac84; border-radius: 10px;" class="me-3"></div>
                    <h5 class="card-title fw-bold mb-0 text-dark">Yeni Ürün Ekle</h5>
                </div>
                <a asp-controller="Product" asp-action="Index"
                       class="btn btn-light btn-sm rounded-pill px-3 border shadow-sm text-muted">
                    <i class="fa-solid fa-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>

            <div class="card-body p-4">
                <form method="post" asp-controller="Product" asp-action="Create" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <label asp-for="Name" class="form-label fw-bold text-muted small text-uppercase">Ürün
                                    Adı</label>
                                    <input asp-for="Name" class="form-control bg-light border-0 py-2"
                                           style="border-radius: 10px;" placeholder="Ürün başlığını giriniz...">
                                        <span asp-validation-for="Name" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-4">
                                        <label asp-for="Description"
                                               class="form-label fw-bold text-muted small text-uppercase">Ürün Açıklaması</label>
                                        <textarea asp-for="Description" rows="4" class="form-control bg-light border-0"
                                                  style="border-radius: 10px;" placeholder="Ürün detaylarını yazınız..."></textarea>
                                        <span asp-validation-for="Description" class="text-danger small"></span>
                                    </div>

                                    <div class="row mb-4">
                                        <div class="col-md-6">
                                            <label asp-for="Price"
                                                   class="form-label fw-bold text-muted small text-uppercase">Fiyat (₺)</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0"
                                                      style="border-radius: 10px 0 0 10px;"><i
                                                    class="fa-solid fa-turkish-lira-sign"></i></span>
                                                    <input asp-for="Price" class="form-control bg-light border-0 py-2"
                                                           style="border-radius: 0 10px 10px 0;" placeholder="0.00">
                                                    </div>
                                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                                </div>
                                                <div class="col-md-6">
                                                    <label asp-for="CategoryId"
                                                           class="form-label fw-bold text-muted small text-uppercase">Kategori</label>
                                                    <select class="form-select bg-light border-0 py-2" style="border-radius: 10px;"
                                                            asp-for="CategoryId" asp-items="ViewBag.Categories">
                                                        <option value="">Kategori Seçiniz</option>
                                                    </select>
                                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="card bg-light border-0 p-3 mb-4" style="border-radius: 15px;">
                                                <label asp-for="Img" class="form-label fw-bold text-muted small text-uppercase">Ürün
                                                    Görseli</label>
                                                    <div class="text-center mb-3 p-3 border-2 border-dashed rounded-3 bg-white">
                                                        <i class="fa-solid fa-cloud-arrow-up fs-1 text-muted opacity-25"></i>
                                                        <input asp-for="Img" type="file" class="form-control form-control-sm mt-2">
                                                        </div>
                                                        <span asp-validation-for="Img" class="text-danger small"></span>
                                                    </div>

                                                    <div class="card border-0 shadow-sm p-3" style="border-radius: 15px;">
                                                        <label class="form-label fw-bold text-muted small text-uppercase mb-3">Görünürlük
                                                            Ayarları</label>

                                                            <div class="form-check form-switch mb-3">
                                                                <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch">
                                                                    <label class="form-check-label fw-medium" asp-for="IsActive">Satışa Açık
                                                                        (Aktif)</label>
                                                                    </div>

                                                                    <div class="form-check form-switch mb-2">
                                                                        <input asp-for="IsHome" class="form-check-input" type="checkbox" role="switch">
                                                                            <label class="form-check-label fw-medium" asp-for="IsHome">Anasayfada Göster</label>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <hr class="my-4 opacity-10">

                                                            <div class="d-flex justify-content-end gap-2">
                                                                <button type="reset" class="btn btn-light px-4 py-2 rounded-pill border">Temizle</button>
                                                                <button type="submit" class="btn btn-primary px-5 py-2 shadow-sm rounded-pill"
                                                                        style="background: #1a1a2e; border: none;">
                                                                    <i class="fa-solid fa-plus me-2 text-warning"></i> Ürünü Oluştur
                                                                </button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        @section Script {
                                            @await Html.PartialAsync("_ValidationScriptsPartial")
                                        }

                                        <style>
                                            .form-control:focus,
                                            .form-select:focus {
                                                background-color: #fff !important;
                                                box-shadow: 0 0 0 0.25rem rgba(26, 26, 46, 0.05);
                                                border: 1px solid #1a1a2e !important;
                                            }

                                            .border-dashed {
                                                border-style: dashed !important;
                                                border-color: #dee2e6 !important;
                                            }

                                            .form-check-input:checked {
                                                background-color: #10ac84;
                                                border-color: #10ac84;
                                            }
                                        </style>