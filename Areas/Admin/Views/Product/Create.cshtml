@{
    Layout = "_AdminLayout";
}
@model ProductCreateModel

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Ürün Ekle</h5>
                <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Product" asp-action="Create" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="Description" class="col-sm-2 col-form-label">Ürün Açıklama</label>
                        <div class="col-sm-10">
                            <textarea asp-validation-for="Description" rows="3" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Price" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="IsActive" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-validation-for="IsActive" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="IsHome" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-validation-for="IsHome" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Img" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Img" type="file" class="form-control">
                            <span asp-validation-for="Img" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select class="form-select" asp-for="CategoryId" asp-items="ViewBag.Categories">
                                <option value="" selected>Seçiniz</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Script {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}