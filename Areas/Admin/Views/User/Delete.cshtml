@model AppUser
@{
    Layout = "_AdminLayout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card border-0 shadow-lg text-center" style="border-radius: 25px; overflow: hidden;">
            <div style="height: 10px; background: linear-gradient(90deg, #ff4757 0%, #ff6b81 100%);"></div>

            <div class="card-body p-5">
                <div class="mb-4">
                    <div class="bg-light d-inline-block p-4 rounded-circle mb-4 border shadow-sm">
                        <i class="fa-solid fa-user-slash text-danger" style="font-size: 3.5rem;"></i>
                    </div>

                    <h3 class="fw-bold text-dark">Kullanıcıyı Sil?</h3>
                    <p class="text-muted px-2">
                        <strong class="text-primary">"@Model.FullName"</strong> isimli kullanıcıyı ve ilişkili tüm
                        verileri sistemden kaldırmak istediğinize emin misiniz?
                    </p>
                </div>

                <form asp-controller="User" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" name="Id" value="@Model.Id">

                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-4">
                        <a asp-action="Index"
                               class="btn btn-light px-4 py-2 rounded-pill fw-bold border text-muted transition-all">
                            <i class="fa-solid fa-arrow-left me-2"></i> Vazgeç
                        </a>
                        <button type="submit"
                                class="btn btn-danger px-4 py-2 rounded-pill fw-bold shadow-sm transition-all">
                            <i class="fa-solid fa-trash-can me-2"></i> Evet, Sil
                        </button>
                    </div>
                </form>
            </div>

            <div class="card-footer bg-light border-0 py-3 text-center">
                <small class="text-muted">
                    <i class="fa-solid fa-triangle-exclamation me-1 text-warning"></i>
                    Bu işlem gerçekleştirildikten sonra kullanıcı sisteme giriş yapamaz.
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .transition-all {
        transition: all 0.3s ease;
    }

    .transition-all:hover {
        transform: translateY(-3px);
        filter: brightness(1.05);
    }

    .card {
        animation: bounceIn 0.45s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

    @@keyframes bounceIn {
        from {
            opacity: 0;
            transform: scale(0.8);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>