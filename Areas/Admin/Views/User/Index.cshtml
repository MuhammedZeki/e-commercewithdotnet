@using Microsoft.AspNetCore.Identity;

@model IEnumerable<AppUser>
@{
    Layout = "_AdminLayout";
}


<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Kuallanıcılar</h5>
                <a asp-controller="User" asp-action="Create" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index">
                    <div class="input-group mb-2">
                        <select name="role" class="form-select" asp-items="ViewBag.Roles">
                            <option value="" selected>Hepsi</option>
                        </select>
                        <button class="btn btn-primary" type="submit">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </form>
                @if (@Model.Count() == 0)
                {
                    <p class="alert alert-danger text-danger">Aradığınız Kullanıcı Bulunamadı</p>

                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Id</th>
                                    <th>Ad Soyad</th>
                                    <th>Email</th>
                                    <th style="width: 90px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kat in Model)
                                {

                                    <tr>
                                        <td>@kat.Id</td>
                                        <td>@kat.FullName</td>
                                        <td>@kat.Email</td>
                                        <td>
                                            <a asp-controller="User" asp-action="Edit" asp-route-id="@kat.Id"
                                                class="btn btn-primary btn-sm">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                            </a>
                                            <a asp-controller="User" asp-action="Delete" asp-route-id="@kat.Id"
                                                class="btn btn-danger btn-sm">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>