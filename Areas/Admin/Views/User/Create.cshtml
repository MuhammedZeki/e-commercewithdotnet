@model UserCreateModel
@{
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm" style="border-radius: 20px;">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div style="width: 5px; height: 25px; background: #6c5ce7; border-radius: 10px;" class="me-3"></div>
                    <h5 class="card-title fw-bold mb-0 text-dark">Yeni Kullanıcı Oluştur</h5>
                </div>
                <a asp-action="Index" class="btn btn-light btn-sm rounded-pill px-3 border shadow-sm text-muted">
                    <i class="fa-solid fa-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>

            <div class="card-body p-4 p-md-5">
                <div class="alert alert-info border-0 mb-4 shadow-sm d-flex align-items-center"
                     style="border-radius: 15px; background-color: #f0f3ff;">
                    <i class="fa-solid fa-circle-info fs-4 me-3 text-primary"></i>
                    <small class="text-dark">Sisteme yeni bir kullanıcı eklemek için aşağıdaki bilgileri eksiksiz
                        doldurunuz. Kullanıcıya rollerini daha sonra düzenleme ekranından atayabilirsiniz.</small>
                    </div>

                    <form method="post" asp-action="Create" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="FullName"
                                   class="form-label fw-bold text-muted small text-uppercase ms-1"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0"
                                      style="border-radius: 12px 0 0 12px; border: 1.5px solid #dee2e6;">
                                    <i class="fa-solid fa-user-tag text-muted"></i>
                                </span>
                                <input type="text" asp-for="FullName" class="form-control border-start-0 py-2 shadow-none"
                                       style="border-radius: 0 12px 12px 0; border: 1.5px solid #dee2e6;"
                                       placeholder="Örn: Ahmet Yılmaz">
                                </div>
                                <span asp-validation-for="FullName" class="text-danger small ms-1"></span>
                            </div>

                            <div class="mb-5">
                                <label asp-for="Email" class="form-label fw-bold text-muted small text-uppercase ms-1"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"
                                          style="border-radius: 12px 0 0 12px; border: 1.5px solid #dee2e6;">
                                        <i class="fa-solid fa-envelope text-muted"></i>
                                    </span>
                                    <input type="email" asp-for="Email" class="form-control border-start-0 py-2 shadow-none"
                                           style="border-radius: 0 12px 12px 0; border: 1.5px solid #dee2e6;"
                                           placeholder="isim@ornek.com">
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small ms-1"></span>
                                </div>

                                <hr class="my-4 opacity-10">

                                <div class="d-flex justify-content-between align-items-center">
                                    <button type="reset" class="btn btn-link text-muted text-decoration-none small">
                                        <i class="fa-solid fa-eraser me-1"></i> Formu Temizle
                                    </button>
                                    <button type="submit" class="btn btn-primary px-5 py-2 shadow rounded-pill fw-bold"
                                            style="background: #1a1a2e; border: none;">
                                        <i class="fa-solid fa-user-plus me-2 text-warning"></i> Kullanıcıyı Kaydet
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            @section Script {
                @await Html.PartialAsync("_ValidationScriptsPartial")
            }

            <style>
                .form-control:focus {
                    border-color: #6c5ce7 !important;
                    background-color: #fbfaff;
                }

                .input-group:focus-within .input-group-text {
                    border-color: #6c5ce7 !important;
                    color: #6c5ce7 !important;
                }

                .card {
                    animation: fadeInUp 0.5s ease-out;
                }

                @@keyframes fadeInUp {
                    from {
                        opacity: 0;
                        transform: translateY(20px);
                    }

                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }
            </style>