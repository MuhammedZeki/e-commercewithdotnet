@{
    Layout = "_AdminLayout";
}
@model AppRole
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body text-center">
                @Model.Name isimli kategoriyi silmek istiyor musunuz?
                <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" name="Id" value="@Model.Id">

                    @if (ViewBag.Users.Count > 0)
                    {
                        @foreach (var user in ViewBag.Users)
                        {
                            <p>@user.UserName</p>
                        }
                    }
                    else
                    {

                        <button type="submit" class="btn btn-danger">Evet</button>
                    }
                    <a asp-action="Index" type="button" class="btn btn-primary">HayÄ±r</a>
                </form>
            </div>
        </div>
    </div>
</div>